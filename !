    <!-- JavaScript 코드 -->
    <script>
        // 버튼 요소 가져오기
        var button = document.getElementById('myButton');

        // 버튼에 클릭 이벤트 리스너 추가
        button.addEventListener('click', function() {
            alert('참가자 총 1명으로 당첨되었습니다. (경품:  20,000$)는 사실이 아닙니다. 이태호 선생님 탄실일 축하!🎉🎉🎉🎉🎉');
        });
    </script>
